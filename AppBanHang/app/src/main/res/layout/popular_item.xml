<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/pop_img"
            android:layout_width="170dp"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mensgymtrainersnikegb"
            app:riv_corner_radius="14dp"></com.makeramen.roundedimageview.RoundedImageView>

        <TextView
            android:id="@+id/nameproduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Product"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriptionproduct"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Description Product"
            android:textColor="#b3b3b3" />

        <TextView
            android:id="@+id/priceproduct"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Price: 10.000.000 VND"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/discountproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="end"
            android:text="Discount: 100% Off"
            android:textColor="#47a43f"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
